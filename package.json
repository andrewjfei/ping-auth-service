{
    "name": "ping-auth-service",
    "version": "1.0.0",
    "description": "A client facing authentication service.",
    "main": "src/index.ts",
    "scripts": {
        "dev": "dotenv -e .env.development -- nodemon src/index.ts",
        "docker:up": "docker compose --env-file .env.development -p ping-auth-service up --build -d",
        "docker:down": "docker compose -p ping-auth-service down",
        "prisma:db:seed": "dotenv -e .env.development -- npx prisma db seed",
        "prisma:migrate:dev": "dotenv -e .env.development -- npx prisma migrate dev",
        "test:integration": "dotenv -e .env.development -- jest --testPathPattern=integration"
    },
    "author": "andrewjfei",
    "license": "ISC",
    "prisma": {
        "seed": "ts-node prisma/seed.ts"
    },
    "dependencies": {
        "@prisma/client": "^5.20.0",
        "dotenv-cli": "^7.4.2",
        "express": "^4.21.0",
        "jsonwebtoken": "^9.0.2",
        "swagger-ui-express": "^5.0.1"
    },
    "devDependencies": {
        "@testcontainers/postgresql": "^10.13.1",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.13",
        "@types/jsonwebtoken": "^9.0.7",
        "@types/node": "^22.7.4",
        "axios": "^1.7.7",
        "jest": "^29.7.0",
        "nodemon": "^3.1.7",
        "ts-jest": "^29.2.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.6.2"
    }
}
